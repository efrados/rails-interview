<p style="color: green"><%= notice %></p>

<%= render @todo_item %>

<div>
  <%= link_to "Edit this todo item", edit_todo_item_path(@todo_item) %> |
  <%= link_to "Back to todo items", complete_todo_item_path(@todo_item) %>

  <% unless @todo_item.completed? %>
    <%= button_to "Complete this item", complete_todo_item_path(@todo_item), method: :put,
    class: 'btn' %>
  <% end %>
  <%= button_to "Destroy this todo item", @todo_item, method: :delete %>
</div>
